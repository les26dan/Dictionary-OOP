               </image>
            </ImageView>
            <TextField fx:id="wordTarget" layoutX="382.0" layoutY="388.0" prefHeight="65.0" prefWidth="379.0" promptText="hello" style="-fx-background-radius: 15; -fx-font-size: 25;" />
